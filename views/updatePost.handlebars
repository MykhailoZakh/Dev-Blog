<form class="card" >
    <header class="form-head" id="{{post.id}}" >Update Post</header>
    <p>
        <label for="title">Title</label>
        <input type="text" id="post-title" name="title" value="{{post.name}}">
    </p>
    <p>
        <label for="content">Content</label>
        <input contenteditable="true" type="text" id="post-text" name="text" value="{{post.text}}">
    </p>
    <p>
    <button id="post-updateBtn">Update</button>
    </p>
    <p>
    <button id="post-deleteBtn">Delete</button>
    </p>
</form>


<script src="/js/updatePost.js"></script>